{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "Fusion.UI.render",
    "lib": [
      "dom",
      "esnext",
    ],
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "*": [ "*" ],
      "fusion": [ "lib" ],
      "fusion/*": [ "lib/*" ],
      "this": [ "src" ],
      "this/*": [ "src/*" ]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "types": [
      "babylonjs",
      "node"
    ]
  },
  "include": [
    "**/*"
  ]
}